# === KONFIGURACJA APLIKACJI ===
spring.application.name=FlightApp

# === KONFIGURACJA BAZY DANYCH POSTGRESQL (dla lokalnego developmentu) ===
# Uwaga: Te wartości pasują do domyślnej konfiguracji w docker-compose.yml
spring.datasource.url=jdbc:postgresql://localhost:5432/flightapp
spring.datasource.username=flightuser
spring.datasource.password=flightpassword
spring.datasource.driverClassName=org.postgresql.Driver
spring.jpa.hibernate.ddl-auto=update

# === KONFIGURACJA API AMADEUS (wymaga uzupełnienia własnymi kluczami) ===
amadeus.api.url=https://test.api.amadeus.com/v2/shopping/flight-offers
amadeus.api.authUrl=https://test.api.amadeus.com/v1/security/oauth2/token
amadeus.api.clientId=WPISZ_SWOJ_CLIENT_ID
amadeus.api.clientSecret=WPISZ_SWOJ_CLIENT_SECRET

# === KONFIGURACJA ZABEZPIECZEŃ APLIKACJI ===
api.security.key=WPISZ_TUTAJ_SWOJ_TAJNY_KLUCZ_API

# === KONFIGURACJA CACHE I INNE ===
spring.cache.type=caffeine
spring.cache.caffeine.spec=expireAfterWrite=10m
spring.jpa.open-in-view=false
spring.jackson.deserialization.fail-on-unknown-properties=false